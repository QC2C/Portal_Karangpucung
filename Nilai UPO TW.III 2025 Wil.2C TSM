  <script>
    function updateRowClasses() {
      const rows = document.querySelectorAll('#data-table tbody tr');
      rows.forEach(row => {
        const upoText = row.cells[5].textContent.trim();
        row.classList.remove('sudah-upo', 'belum-upo', 'belum-upo-row');

        if (upoText === '' || upoText === '-' || upoText === 'â€“') {
          row.classList.add('belum-upo');
          row.classList.add('belum-upo-row');
        } else {
          row.classList.add('sudah-upo');
        }
      });
    }

    function updateCounts() {
      const sudah = document.querySelectorAll('#data-table tbody tr.sudah-upo').length;
      const belum = document.querySelectorAll('#data-table tbody tr.belum-upo').length;

      document.getElementById('jumlah-sudah-upo').textContent = `Sudah UPO: ${sudah}`;
      document.getElementById('jumlah-belum-upo').textContent = `Belum UPO: ${belum}`;
    }

    function filterRows(status) {
      const rows = document.querySelectorAll('#data-table tbody tr');
      rows.forEach(row => {
        switch (status) {
          case 'all':
            row.style.display = '';
            break;
          case 'sudah':
            row.style.display = row.classList.contains('sudah-upo') ? '' : 'none';
            break;
          case 'belum':
            row.style.display = row.classList.contains('belum-upo') ? '' : 'none';
            break;
        }
      });
      updateCounts(); // update jumlah setelah filter
    }

    document.addEventListener('DOMContentLoaded', () => {
      updateRowClasses();
      updateCounts();
    });

    document.getElementById('search-input').addEventListener('input', function () {
  const query = this.value.toLowerCase();
  const rows = document.querySelectorAll('#data-table tbody tr');

  rows.forEach(row => {
    const cellsText = Array.from(row.cells).map(cell => cell.textContent.toLowerCase()).join(' ');
    row.style.display = cellsText.includes(query) ? '' : 'none';
  });
});

  </script>
  
